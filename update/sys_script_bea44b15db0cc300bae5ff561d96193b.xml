        <script><![CDATA[(function executeRule(current, previous /*null when async*/) {

	// Instantiate the NeedItUtils class and call the isDatePast and isDateToday functions passing 
	// the u_when_needed value.
	var niutils = new NeedItUtils();
	var isPast = niutils.isDatePast(current.u_when_needed);
	var isToday = niutils.isDateToday(current.u_when_needed);
	
	// If the When needed date is in the past or equal to today abort and write error message.
	if(isPast == true) {
		gs.addErrorMessage('When needed date cannot be in the past.');
		current.setAbortAction(true);
	} else if(isToday == true) {
		gs.addErrorMessage('Requests cannot be submitted for today.');
		current.setAbortAction(true);
	}

})(current, previous);]]></script>
